/var/log/nginx/decoy-access.log
/var/log/nginx/msg-access.log
/var/log/nginx/error.log
{
    create 0644 nginx nginx
    daily
    rotate 10
    missingok
    notifempty
    compress
    sharedscripts
    postrotate
        /bin/kill -USR1 `cat /run/nginx.pid 2>/dev/null` 2>/dev/null || true
    endscript
}

